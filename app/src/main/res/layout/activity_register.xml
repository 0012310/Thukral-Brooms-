<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context="thukral.brooms.Activities.RegisterActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center|center_vertical"
        android:text="Distributor"
        android:textColor="@color/partial_transparent"
        android:textSize="23sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="26dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <Button
                        android:id="@+id/btn_distributor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:fontFamily="sans-serif"
                        android:text="Distributor"
                        android:textAllCaps="false"
                        android:textColor="@color/gen_white"

                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#FFF">

                    </View>


                    <Button
                        android:id="@+id/bt_retailer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/green_light"
                        android:fontFamily="sans-serif"
                        android:text="Retailer"
                        android:textAllCaps="false"
                        android:textColor="@color/gen_white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" Name"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <EditText

                    android:maxLength="10"
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" Phone"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"

                    android:hint=" Email"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" Password"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <Spinner
                    android:id="@+id/spinner_state"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <Spinner
                    android:id="@+id/spinner_zone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <Spinner
                    android:id="@+id/spinner_distributor"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey"
                    android:visibility="gone" />


                <EditText
                    android:maxLength="16"
                    android:inputType="number"
                    android:id="@+id/et_aadhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" Aadhar No"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <EditText
                    android:id="@+id/et_pan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" PAN No"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />


                <EditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" Shop Name"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" City"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />


                <EditText
                    android:id="@+id/et_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"

                    android:hint=" Area"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />


                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" Address"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />

                <EditText
                    android:id="@+id/et_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" LandMark"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />


                <EditText

                    android:maxLength="6"
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/box"
                    android:drawablePadding="5sp"
                    android:hint=" PinCode"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="9dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/blue_grey" />


                <Button
                    android:id="@+id/btn_distributor_sub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="sans-serif"
                    android:text="Distributor"
                    android:textAllCaps="false"
                    android:textColor="@color/gen_white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_retailer_sub"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/green_light"
                    android:fontFamily="sans-serif"
                    android:text="Retailer"
                    android:textAllCaps="false"
                    android:textColor="@color/gen_white"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
